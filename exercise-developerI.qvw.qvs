LOAD Office &'-'& EmployeeID as OfficeEmployeeID, 
     [2005], 
     [2006], 
     [2007], 
     [2008], 
     [2009]
FROM
C:\QlikViewTraining\DeveloperI\Chapter12\Datasources\Budget.xls
(biff, embedded labels, header is 1 lines, table is Sheet1$);
