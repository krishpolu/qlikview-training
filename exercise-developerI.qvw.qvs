///$tab Customers
QUALIFY *;
UNQUALIFY CustomerID,DivisionID;

LOAD Address,
    City,
    CompanyName,
    ContactName,
    Country,
    CustomerID,
    DivisionID,
    Fax,
    Phone,
    PostalCode,
    StateProvince;
SQL SELECT *
FROM Customers;

UNQUALIFY *;
///$tab Products
LOAD CategoryID,
    ProductID,
    ProductName,
    QuantityPerUnit,
    SupplierID,
    UnitCost,
    UnitPrice,
    UnitsInStock,
    UnitsOnOrder;
SQL SELECT *
FROM Products;


QUALIFY *;
UNQUALIFY CategoryID;
LOAD CategoryID,
    CategoryName,
    Description;
SQL SELECT *
FROM Categories;
UNQUALIFY *;
///$tab Shipping
MAPPING
LOAD ShipperID,
CompanyName;
SQL SELECT *
FROM Shippers;

LOAD OrderID&'-'&LineNo as OrderDetailID,
    ShipmentDate,    
    ShipperID,
    ApplyMap('Shippers', ShipperID) as Shipper;
SQL SELECT *
FROM Shipments;


///$tab Orders

QUALIFY ShipperID;
LOAD CustomerID,
    EmployeeID,
    Freight,
    OrderDate,
    OrderID,
    ShipperID;
SQL SELECT *
FROM Orders;
UNQUALIFY *;

QUALIFY *;
UNQUALIFY OrderID,ProductID,OrderDetailID;
LOAD Discount,
    LineNo,
    OrderID,
    ProductID,
    OrderID&'-'&LineNo as OrderDetailID,
    Quantity,
    UnitPrice;
SQL SELECT *
FROM `Order Details`;
UNQUALIFY *;



///$tab Suppliers
QUALIFY *;
UNQUALIFY SupplierID;
Suppliers:
LOAD SupplierID,
    CompanyName as Supplier,
    ContactName,
    Address,
    City,
    PostalCode,
    Country,
    Phone,
    Fax
FROM C:\QlikViewTraining\DeveloperI\Chapter12\Datasources\Suppliers.xml (XmlSimple, Table is [Suppliers/_empty_]);

